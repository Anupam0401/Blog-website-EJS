<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="basic-url">Title</label>
        <input class="form-control" type="text" name="postTitle" id="basic-url">

        <label for="post-content">Post</label>
        <textarea class="form-control" type="text" name="postBody" id="post-content" rows="5" cols="200"></textarea>
    </div>
   
    <button class="btn btn-primary" type="submit">Publish</button>
</form>


